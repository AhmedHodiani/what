{
  "displayName": "What",
  "name": "what",
  "description": "Visual thinking app. Draw, organize, and save ideas locally in .what files.",
  "version": "0.4.0",
  "main": "./node_modules/.dev/main/index.js",
  "resources": "src/resources",
  "author": {
    "name": "Ahmed Hodiani",
    "email": "a.hodiani@hotmail.com"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependenciesFile": "./trusted-dependencies-scripts.json"
  },
  "scripts": {
    "start": "electron-vite preview",
    "predev": "run-s clean:dev",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch",
    "compile:app": "electron-vite build",
    "compile:packageJSON": "tsx ./src/lib/electron-app/release/modules/prebuild.ts",
    "prebuild": "run-s clean:dev compile:app compile:packageJSON",
    "build": "pnpm electron-builder",
    "build:win": "pnpm prebuild && electron-builder --win",
    "build:linux": "pnpm prebuild && electron-builder --linux",
    "build:all": "pnpm prebuild && electron-builder --win --linux",
    "publish:all": "pnpm prebuild && electron-builder --win --linux --publish always",
    "postinstall": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "tsx ./src/lib/electron-app/release/modules/release.ts",
    "release": "electron-builder --publish always",
    "clean:dev": "rimraf ./node_modules/.dev",
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --write --no-errors-on-unmatched --assist-enabled=true"
  },
  "dependencies": {
    "@mdit/plugin-align": "^0.22.2",
    "@mdit/plugin-tasklist": "^0.22.2",
    "@types/better-sqlite3": "^7.6.13",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "consola": "^3.4.2",
    "electron-router-dom": "^2.1.0",
    "electron-updater": "^6.6.2",
    "flexlayout-react": "^0.8.17",
    "html-react-parser": "^5.2.7",
    "lucide-react": "^0.541.0",
    "markdown-it": "^14.1.0",
    "markdown-it-mark": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@tailwindcss/vite": "^4.0.9",
    "@types/adm-zip": "^0.5.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/semver": "^7.5.8",
    "@vitejs/plugin-react": "^5.0.1",
    "code-inspector-plugin": "^1.2.2",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-extension-installer": "^2.0.0",
    "electron-icon-maker": "^0.0.5",
    "electron-vite": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "open": "^10.1.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "semver": "^7.5.4",
    "tailwindcss": "^4.0.9",
    "tsx": "^4.19.3",
    "typescript": "^5.1.6",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "directories": {
      "app": "node_modules/.dev",
      "buildResources": "src/resources/build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ahmedhodiani",
        "repo": "what"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
